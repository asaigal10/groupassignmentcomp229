<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="GameNameTextField">Game Name</label>
                    <input type="text" class="form-control"
                    id="GameNameTextField"
                    placeholder="Enter the game name"
                    name="GameName" 
                    value="<%= tournament.gameName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="userNameTextField">UserName</label>
                    <input type="text" class="form-control"
                    id="userNameTextField"
                    placeholder="Enter the player's userName"
                    name="userName" 
                    value="<%= tournament.userName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="playerIdTextField">Player ID</label>
                    <input type="text" class="form-control"
                    id="playerIdTextField"
                    placeholder="Enter the player ID"
                    name="playerID" 
                    value="<%= tournament.playerID %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="regionTextArea">Region</label>
                    <textarea type="text" class="form-control"
                    id="regionTextArea"
                    placeholder="Enter the region of the tournament"
                    name="region" 
                    required>
                    <%= tournament.region %>
                    </textarea>
                </div>

                <div class="form-group">
                    <label for="dateTextField">Date</label>
                    <input type="text" class="form-control"
                    id="dateTextField"
                    placeholder="Enter the date of the tournament"
                    name="date" 
                    value="<%= tournament.date %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/tournament-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>